    <script>
        // Mobile menu toggle
        const mobileMenu = document.querySelector('.mobile-menu');
        const mainNav = document.getElementById('main-nav');
        
        mobileMenu.addEventListener('click', function() {
            mainNav.classList.toggle('active');
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 100,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    mainNav.classList.remove('active');
                }
            });
        });
        
        // Header background on scroll
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if(window.scrollY > 100) {
                header.style.background = 'rgba(0, 0, 0, 0.95)';
                header.style.padding = '15px 0';
            } else {
                header.style.background = 'rgba(0, 0, 0, 0.9)';
                header.style.padding = '20px 0';
            }
        });
        
        // Service selection and WhatsApp integration
        const buyButtons = document.querySelectorAll('.btn-buy');
        const confirmationModal = document.getElementById('confirmationModal');
        const closeConfirmation = document.getElementById('closeConfirmation');
        const closeModalButton = document.querySelector('.close-modal');
        const confirmationServiceName = document.getElementById('confirmationServiceName');
        const whatsappButton = document.getElementById('whatsappButton');
        
        let selectedService = null;
        
        // WhatsApp message templates for each service
        const serviceMessages = {
            "Análise de Perfil do Investidor": "Olá! Gostaria de contratar o serviço de Análise de Perfil do Investidor da Plenno. Pode me informar mais detalhes e valores?",
            "Análise de Carteira de Investimentos": "Olá! Tenho interesse no serviço de Análise de Carteira de Investimentos da Plenno. Poderia me passar mais informações?",
            "Planejamento Financeiro Pessoal": "Olá! Gostaria de saber mais sobre o Planejamento Financeiro Pessoal da Plenno. Pode me explicar como funciona?",
            "Consultoria Financeira": "Olá! Estou interessado na Consultoria Financeira da Plenno. Poderia me informar sobre os planos e valores?"
        };
        
        buyButtons.forEach(button => {
            button.addEventListener('click', function() {
                selectedService = this.getAttribute('data-service');
                
                // Update confirmation modal
                confirmationServiceName.textContent = selectedService;
                
                // Update WhatsApp link with the appropriate message
                const encodedMessage = encodeURIComponent(serviceMessages[selectedService]);
                whatsappButton.href = https://wa.me/5511967006154?text=${encodedMessage};
                
                // Show confirmation modal
                confirmationModal.style.display = 'flex';
            });
        });
        
        function closeConfirmationModal() {
            confirmationModal.style.display = 'none';
            selectedService = null;
        }
        
        closeConfirmation.addEventListener('click', closeConfirmationModal);
        closeModalButton.addEventListener('click', closeConfirmationModal);
        
        // Calculator functionality
        const calculateBtn = document.getElementById('calculateBtn');
        const initialAmountInput = document.getElementById('initialAmount');
        const monthlyAmountInput = document.getElementById('monthlyAmount');
        const interestRateInput = document.getElementById('interestRate');
        const timePeriodInput = document.getElementById('timePeriod');
        const finalAmountElement = document.getElementById('finalAmount');
        const totalInvestedElement = document.getElementById('totalInvested');
        const totalInterestElement = document.getElementById('totalInterest');
        const monthlyEarningsElement = document.getElementById('monthlyEarnings');
        
        function calculateCompoundInterest() {
            const initialAmount = parseFloat(initialAmountInput.value) || 0;
            const monthlyAmount = parseFloat(monthlyAmountInput.value) || 0;
            const annualInterestRate = parseFloat(interestRateInput.value) || 0;
            const years = parseFloat(timePeriodInput.value) || 1;
            
            const monthlyInterestRate = annualInterestRate / 100 / 12;
            const months = years * 12;
            
            let totalAmount = initialAmount;
            let totalInvested = initialAmount;
            
            // Calculate compound interest with monthly contributions
            for (let i = 0; i < months; i++) {
                totalAmount = totalAmount * (1 + monthlyInterestRate) + monthlyAmount;
                totalInvested += monthlyAmount;
            }
            
            const totalInterest = totalAmount - totalInvested;
            const monthlyEarnings = totalAmount * monthlyInterestRate;
            
            // Format and display results
            finalAmountElement.textContent = formatCurrency(totalAmount);
            totalInvestedElement.textContent = formatCurrency(totalInvested);
            totalInterestElement.textContent = formatCurrency(totalInterest);
            monthlyEarningsElement.textContent = formatCurrency(monthlyEarnings);
        }
        
        function formatCurrency(value) {
            return new Intl.NumberFormat('pt-BR', {
                style: 'currency',
                currency: 'BRL'
            }).format(value);
        }
        
        calculateBtn.addEventListener('click', calculateCompoundInterest);
        
        // Calculate on page load
        window.addEventListener('load', calculateCompoundInterest);
        
        // Contact form submission
        const contactForm = document.getElementById('supportForm');
        const formSuccess = document.getElementById('formSuccess');
        
        contactForm.addEventListener('submit', function(e) {
            // FormSubmit.co will handle the submission
            formSuccess.style.display = 'block';
            
            // Reset the form
            setTimeout(() => {
                contactForm.reset();
            }, 1000);
            
            // Hide success message after 5 seconds
            setTimeout(() => {
                formSuccess.style.display = 'none';
            }, 5000);
        });
    </script>
</body>
</html>
